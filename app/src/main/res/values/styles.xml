<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarStyle">@style/MyActionBar</item>

        <!-- Custom button style-->
        <item name="android:buttonStyle">@style/celuk_button</item>
        <item name="colorButtonNormal">@color/c_yellow_light</item>
        <!--<item name="colorControlHighlight">@color/c_red</item>-->

        <item name="android:textColorHint">@color/c_yellow_light</item>
        <item name="colorControlNormal">@color/c_yellow_light</item>
        <item name="colorControlActivated">@color/c_white</item>
        <item name="colorControlHighlight">@color/c_white</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/c_black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/c_white</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
